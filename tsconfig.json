{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"baseUrl": "src",
		"paths": {
			"@components/*": ["./components/*"],
			"@pages/*": ["src/pages/*"],
			"@styles/*": ["./styles/*"],
			"@shared/*": ["./shared/*"]
		}
	},
	"include": ["next-env.d.ts", "./src/**/*.ts", "./src/**/*.tsx", ".eslintrc.cjs"],
	"exclude": ["node_modules"]
}
